{% extends "base.twig" %}

{% block content %}
<script>
    function showPassword(){
        var x = document.getElementById("InputPassword1");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
<div class="container-fluid" style="background-image: url('https://wallpaperaccess.com/full/4496625.png');">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-7 col-xl-3 shadow p-3 mb-5 bg-white" style="margin-top:100px; border-radius:30px;">
                <div class="container" style="margin-top:50px;">
                    <div class="row">
                        <div class="col-xl-6">
                            {% block title %}
                            {% endblock %}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <form style="margin-top:20px;">
                            <div class="form-group">
                                <label for="exampleInputEmail1">用戶名稱</label>
                                <input type="email" class="form-control border border-dark" id="InputEmail1" aria-describedby="emailHelp" placeholder="電子郵件">
                            </div>
                            <div class="form-group" style="margin-top:10px;">
                                <label for="exampleInputPassword1">密碼</label>
                                <div class="input-group mb-3">
                                    <input type="password" class="form-control border border-dark" placeholder="密碼" id="InputPassword1" aria-label="密碼" aria-describedby="basic-addon2">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-secondary border border-dark border-1" type="button" onclick="showPassword()"><span class="material-icons-outlined">visibility</span></button>
                                    </div>
                                </div>                         
                            </div>
                            {% block loginButton %}
                            {% endblock %}
                            </form>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-4">
                            <a href="#" class="link-success" style="text-decoration:none;"><small><strong>忘記密碼</strong></small></a>
                        </div>  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}