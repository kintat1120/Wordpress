	<style>
		@font-face { font-family: Spartan_Semi Blod; src: url('{{ site.theme.link }}/static/fonts/Spartan/static/Spartan-SemiBold.ttf'); }
		@font-face { font-family: Spartan_Medium; src: url('{{ site.theme.link }}/static/fonts/Spartan/static/Spartan-Medium.ttf'); } 
		@font-face { font-family: Spartan_Regular; src: url('{{ site.theme.link }}/static/fonts/Spartan/static/Spartan-Regular.ttf'); } 
		@font-face { font-family: Spartan_Thin; src: url('{{ site.theme.link }}/static/fonts/Spartan/static/Spartan-Thin.ttf'); } 
		@font-face { font-family: Noto Sans TC_Medium; src: url('{{ site.theme.link }}/static/fonts/Noto_Sans_TC/NotoSansTC-Medium.otf'); } 
		@font-face { font-family: Noto Sans TC_Regular; src: url('{{ site.theme.link }}/static/fonts/Noto_Sans_TC/NotoSansTC-Regular.otf'); } 
		/*custom-navbar-toggleButton*/
		.custom-toggler.navbar-toggler {
            border-color: white;
        }
        /* Setting the stroke to green using rgb values (0, 128, 0) */
          
        .custom-toggler .navbar-toggler-icon {
            background-image: url(
				"data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 32 32' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(182, 218, 78, 0.8)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 8h24M4 16h24M4 24h24'/%3E%3C/svg%3E");
        }
		
		.pc-version{
			display:block !important;
		}
		.mobile-version{
			display:none !important;
		}
		.logo-margin{
			margin-right:150px !important;
		}
		@media screen and (max-width:1399.5px) {
			.logo-margin{
				margin-right:120px !important;
			}   
		} 
		@media screen and (max-width:1274px) {
			.logo-margin{
				margin-right:0px !important;
			}   
		} 
		@media screen and (max-width:991.5px) {
			.pc-version{
				display:none !important; 
			}
			.mobile-version{
				display:block !important;
			}     
		} 
	</style>

{% endblock %}
