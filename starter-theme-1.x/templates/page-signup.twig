{% extends "base.twig" %}
{% block content %}
<div class="container-fluid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-7 col-xl-3 shadow p-3 mb-5 bg-white" style="margin-top:100px; border-radius:30px;">
                <div class="container" style="margin-top:50px;">
                    <div class="row">
                        <div class="col-xl-12">
                            <span class="fs-4" style="color:#545454;"><strong>新會員登記</strong></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <form style="margin-top:20px;">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="電郵/聯絡電話" aria-label="Email" aria-describedby="button-addon2">
                                    <button class="btn btn-outline-secondary btn-sm" type="button" id="button-addon2">取得驗證碼</button>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="verifyCode" placeholder="驗證碼">
                                </div>                           
                                <div class="mb-3" style="margin-top:30px;">
                                    <a href="/wordpress/signupsuccess" style="background-color:#406E68; color:white;" class="btn my-2 my-sm-0 loginButton" type="submit">登記</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}