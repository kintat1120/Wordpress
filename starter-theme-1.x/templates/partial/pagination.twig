<style>
    button{
        color:#ADADAD;
    }
    a{
        color:#ADADAD;
        text-decoration: none;

    }
    a:hover{
        color:#212529;
    }
    .prevBtn{
        margin-right:10px;
    }
    .pageNumber{
        margin-right:10px;
    }
</style>
{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block">
        <ul class="pagination">
            {# First button
            {% if posts.pagination.pages|first and posts.pagination.pages|first.current != true %}
                <li class="first btn">
                    <a href="{{ posts.pagination.pages|first.link }}">First</a>
                </li>
            {% else %}
                <li class="first btn disabled">
                    <button disabled>First</button>
                </li>
            {% endif %}
            #}

            {# Previous #}
            {% if posts.pagination.prev %}
                {#<li class="prev btn">#}
                <li class="prevBtn">
                    <a href="{{ posts.pagination.prev.link }}">上一頁</a>
                </li>
            {% else %}
                {#<li class="prev btn disabled">#}
                <li>
                    <button style="display:none;">上一頁</button>
                </li>
            {% endif %}

            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li class="pageNumber">
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current pageNumber">
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            {% if posts.pagination.next %}
                {#<li class="next btn">#}
                <li>
                    <a href="{{ posts.pagination.next.link }}">下一頁</a>
                </li>
            {% else %}
                <li class="next btn disabled">
                    <button style="display:none;">下一頁</button>
                </li>
            {% endif %}

            {# Last button
            {% if posts.pagination.pages|last and posts.pagination.pages|last.current != true %}
                <li class="last btn">
                    <a href="{{ posts.pagination.pages|last.link }}">Last</a>
                </li>
            {% else %}
                <li class="last btn disabled">
                    <button disabled>Last</button>
                </li>
            {% endif %}
            #}
        </ul>
    </nav>
{% endif %}
